{
  "name": "gemoji",
  "version": "5.0.1",
  "description": "GitHub emoji: gemoji",
  "license": "MIT",
  "keywords": [
    "gemoji",
    "emoji",
    "unicode",
    "name",
    "shortcode",
    "tag",
    "alias",
    "name"
  ],
  "repository": "wooorm/gemoji",
  "bugs": "https://github.com/wooorm/gemoji/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.json",
    "emoji-to-name.json",
    "name-to-emoji.json"
  ],
  "main": "index.json",
  "devDependencies": {
    "browserify": "^16.0.0",
    "mdast-zone": "^4.0.0",
    "node-fetch": "^2.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^8.0.0",
    "remark-lint-table-pipe-alignment": "^2.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "unist-builder": "^2.0.0",
    "xo": "^0.29.0"
  },
  "scripts": {
    "generate": "node script/crawl-data && node script/build-data",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify index.json -s gemoji > gemoji.js",
    "build-mangle": "browserify index.json -s gemoji -p tinyify > gemoji.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run generate && npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "gemoji.js"
    ]
  },
  "remarkConfig": {
    "settings": {
      "tablePipeAlign": false
    },
    "plugins": [
      "preset-wooorm",
      [
        "remark-lint-table-pipe-alignment",
        false
      ],
      "./script/build-support"
    ]
  }
}
