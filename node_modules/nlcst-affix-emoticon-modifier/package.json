{
  "name": "nlcst-affix-emoticon-modifier",
  "version": "1.1.4",
  "description": "Merge affix emoticons into the previous sentence in NLCST",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "affix",
    "emoticon"
  ],
  "repository": "syntax-tree/nlcst-affix-emoticon-modifier",
  "bugs": "https://github.com/syntax-tree/nlcst-affix-emoticon-modifier/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "unist-util-modify-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "nlcst-emoji-modifier": "^3.0.0",
    "nlcst-emoticon-modifier": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "retext-english": "^3.0.0",
    "tape": "^4.0.0",
    "unified": "^8.0.0",
    "unist-util-remove-position": "^2.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify index.js --bare -s nlcstAffixEmoticonModifier > nlcst-affix-emoticon-modifier.js",
    "build-mangle": "esmangle < nlcst-affix-emoticon-modifier.js > nlcst-affix-emoticon-modifier.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignore": [
      "nlcst-affix-emoticon-modifier.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
